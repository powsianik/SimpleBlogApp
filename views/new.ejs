<%- include ./partials/header %>

<div class="ui main text container">
    <form class="ui form" action="/blogposts" method="post">
        <div class="field">
            <label>Post Title</label>
            <input type="text" name="blogPost[title]" placeholder="Post title">
        </div>
        <div class="field">
            <label>Url of Image</label>
            <input type="text" name="blogPost[imgUrl]" placeholder="Url of image">
        </div>
        <div class="field">
            <label>Content</label>
            <textarea name="blogPost[contentText]"></textarea>
        </div>
        <div class="field">
            <label>Date and Time</label>
            <div class="ui calendar" id="example1">
                <div class="ui input left icon">
                    <i class="calendar icon"></i>
                    <input type="text" name="blogPost[date]" placeholder="Date/Time">
                </div>
            </div>
        </div>
        <div class="field">
            <label>Author</label>
            <input type="text" name="blogPost[author]" placeholder="Author's signature">
        </div>
        <button class="ui violet inverted button" type="submit">Save</button>
    </form>
</div>

<%- include ./partials/footer %>