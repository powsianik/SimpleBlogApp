<%- include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= post.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= post.imgUrl %>">
            <div class="content">
                <span><%= post.date %></span>
            </div>
            <div class="description">
                <p><%= post.contentText %></p>
            </div>
        </div>
    </div>

    <form action="/blogposts/<%= post._id %>?_method=DELETE" method="post">
        <a class="ui orange inverted button" href="/blogposts/<%= post._id %>/edit">Edit</a>
        <button type="submit" class="ui red inverted button" href="/blogposts/<%= post._id %>/edit">Delete</button>
    </form>
</div>

<%- include ./partials/footer %>